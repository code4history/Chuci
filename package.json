{
  "name": "@c4h/chuci",
  "version": "0.2.2",
  "description": "Standalone multimedia swiper and viewer web components",
  "type": "module",
  "private": false,
  "main": "./dist/chuci.umd.js",
  "module": "./dist/chuci.js",
  "browser": "./dist/chuci.umd.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/chuci.js",
      "require": "./dist/chuci.umd.js"
    },
    "./package.json": "./package.json",
    "./dist/*": "./dist/*"
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite --host",
    "build": "npm run typecheck && cross-env BUILD_MODE=package vite build",
    "build:demo": "vite build",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "prepublishOnly": "npm run typecheck && npm run build"
  },
  "engines": {
    "pnpm": ">=9.0.0"
  },
  "dependencies": {
    "gsplat": "^1.2.9",
    "swiper": "^11.2.10",
    "three": "^0.171.0",
    "viewerjs": "^1.11.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.19.3",
    "@types/three": "^0.171.0",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "@vitest/coverage-v8": "^3.2.4",
    "cross-env": "^7.0.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^9.1.2",
    "jsdom": "^25.0.1",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "vite": "^6.4.1",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "swiper",
    "viewer",
    "webcomponents",
    "multimedia",
    "carousel",
    "panorama",
    "3d"
  ],
  "author": "Code for History",
  "contributors": [
    "kobakazu0429 <kobakazu10@gmail.com>"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/code4history/Chuci.git"
  },
  "bugs": {
    "url": "https://github.com/code4history/Chuci/issues"
  },
  "homepage": "https://github.com/code4history/Chuci#readme"
}
